{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":prImmediately",
    ":semanticCommits",
    ":semanticPrefixChore",
    ":separateMultipleMajorReleases",
    "npm:unpublishSafe",
    ":automergeMinor",
    ":automergePr",
    ":combinePatchMinorReleases",
    ":pinDevDependencies",
    "group:allNonMajor",
  ],
  "timezone": "Europe/Rome",
  "configMigration": true,
  "osvVulnerabilityAlerts": true,
  "postUpdateOptions": [
    "npmDedupe"
  ],
  "packageRules": [
    {
      "groupName": "Ark.Tools",
      "description": "Ark Tools group",
      "matchPackageNames": [
        "/^Ark\\.Tools/"
      ],
      "matchManagers": [ 
        "nuget" 
      ]
    },
    {
      "extends": [
        "monorepo:dotnet",
        "monorepo:aspnet extensions",
        "monorepo:aspnet-api-versioning",
        "monorepo:dotnet-azure-ad-identitymodel-extensions",
        "monorepo:dotnet-wcf",
        "monorepo:aspnet-health-checks"
      ],
      "allowedVersions": "/^(6|8|10|12)\\.[0-9]+\\.[0-9]+$/"
    },
    {
      "matchManagers": [ 
        "nuget" 
      ],
      "matchPackageNames": "EPPlus",
      "allowedVersions": "/^[0-4]\\.[0-9]+\\.[0-9]+(\\.[0-9]+)?$/"
    }
  ]
}
